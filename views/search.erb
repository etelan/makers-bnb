<style>
  .transbox {
      margin: 30px;
      background-color: #ffffff;
      border: 1px solid black;
      opacity: 0.4;
  }

  .red {
    color: red;
  }

  .transbox p {
    margin: 5%;
    font-weight: bold;
    color: red;
  }

  .transbox form {
    margin: 5%;
    font-weight: bold;
    color: red;
  }

  .transbox h1 {
    margin: 5%;
    font-weight: bold;
    color: black;
  }
  .transbox h2 {
    margin: 5%;
    font-weight: bold;
    color: black;
  }

  /* The navigation menu links */
  .sidenav a {
    padding: 6px 8px 6px 16px;
    text-decoration: none;
    font-size: 25px;
    color: #221e1e;
    display: block;
  }

  /* The navigation menu links */
  .sidenav p {
    padding: 6px 8px 6px 16px;
    text-decoration: none;
    font-size: 25px;
    color: #221e1e;
    display: block;
  }
</style>


<!-- Side navigation -->
<div class="sidenav">
  <a href="login">Login</a>
  <a href="sign-up">Signup</a>
  <a href="search" style="color:#325438;">All Listings</a>
  <a href="listings">Your Places</a>
  <a href="your-bookings">Your Bookings</a>
  <a href="notifications">Notifications</a>
  <a href="/">Sign Out</a>
</div>

<!-- Not in the side -->
<div class="main" >


  <!-- Title -->
  <h1 style="color:#C0C0C0"> All Listings </h1>

  <!-- Print out each place in a box -->
  <%@places.each do |place|%>
    <div class="transbox">

      <h1> <%=place.name%> </h1>
      <h2> Â£<%=place.price%> per night</h2>
      <p> <%=place.description%> </p>
      <p> Owner: <%=place.owner%> </p>

      <p> ID: <%=place.id%> </p>

      <form action="/request">
        <input type="hidden" id="place_id" name="id" value=<%=place.id%>>
        <input type="submit" id="request" value="Make Request">
      </form>
    </div>
  <%end%>

</div>
